#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/hyperspace@3.17.0/node_modules/hyperspace/bin/node_modules:/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/hyperspace@3.17.0/node_modules/hyperspace/node_modules:/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/hyperspace@3.17.0/node_modules:/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/hyperspace@3.17.0/node_modules/hyperspace/bin/node_modules:/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/hyperspace@3.17.0/node_modules/hyperspace/node_modules:/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/hyperspace@3.17.0/node_modules:/Users/Shared/gnostr.org/hyper-cli/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/simulator.js" "$@"
else
  exec node  "$basedir/../../bin/simulator.js" "$@"
fi
